<%= stylesheet_link_tag 'user_request_form' %>
<%= javascript_include_tag 'user_request_form' %>

<div id="form_wrapper"> 
  <div id="main" class="usages second_page"> 
    <%= render 'title_and_sideinfo', :page_number => 'second' %>
    <%= form_tag(:root, :class => 'tabbed') do %>
      <% @usage_choices.each do |super_usage_key, super_usage_value|  %>
        <%= content_tag :div, :id=>super_usage_key, :class => 'question' do%>
          <%# REFACTORISER  ET FINIR LES WEIGHTS!!!  %>
          <% su_id = super_usage_key.split('_').last  %>
          <span class="qicon"></span> 
          <div class="qbody">

            <div class="qname">
              <h2 class="usageTitle"><%=t_safe "super_usage_title_#{su_id}"%></h2>
              <p class="weightExplain"><%= t_safe "form_second_step_question_super_usage_#{su_id}" %></p>
            </div>

            <div class="answer">
              <select class="slider nosnap" name='<%= "super_usage_weight_#{su_id}" %>'>
                <option value="0"><%= t :form_second_step_not_important %></option>
                <option value=""></option>
                <option value="50" selected="selected"></option>
                <option value=""></option>
                <option value="100"><%= t :form_second_step_very_important %></option>
              </select>
            </div>
          </div>
        <% end  %>
      <% end  %>
      <div class="clearfix"></div>
      <div class="actions">
        <a href="/conseiller-virtuel/1290/questionnaire?back=true" class="prev-button">Précédent</a>
        <%= submit_tag t(:form_next_button_label), :class => "next-button", :id => "next-button" %>
      </div>
      <% end %>
    <div class="clearfix"></div>
  </div>
</div>
<div class="clearfix"></div>
